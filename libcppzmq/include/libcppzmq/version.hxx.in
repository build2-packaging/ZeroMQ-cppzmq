#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBCPPZMQ_VERSION       $libcppzmq.version.project_number$ULL
#define LIBCPPZMQ_VERSION_STR   "$libcppzmq.version.project$"
#define LIBCPPZMQ_VERSION_ID    "$libcppzmq.version.project_id$"
#define LIBCPPZMQ_VERSION_FULL  "$libcppzmq.version$"

#define LIBCPPZMQ_VERSION_MAJOR $libcppzmq.version.major$
#define LIBCPPZMQ_VERSION_MINOR $libcppzmq.version.minor$
#define LIBCPPZMQ_VERSION_PATCH $libcppzmq.version.patch$

#define LIBCPPZMQ_PRE_RELEASE   $libcppzmq.version.pre_release$

#define LIBCPPZMQ_SNAPSHOT_SN   $libcppzmq.version.snapshot_sn$ULL
#define LIBCPPZMQ_SNAPSHOT_ID   "$libcppzmq.version.snapshot_id$"
